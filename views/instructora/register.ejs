
<% include ../partials/header %>

<h1>Registrate como instructora!</h1>
<br>
<form action="/register/instructora" method="POST" >
  <div class="form-group">
    <input  class="form-control" type="text" name="nombre" placeholder="Nombre completo">
  </div>
  <div class="form-group">
    <input class="form-control" type="email" name="email" placeholder="Email">
  </div>
  <div class="form-group">
    <input class="form-control" type="password" name="password" placeholder="Password">
  </div>
  <div class="form-group">
    <input class="form-control" type="date" name="fechaDeNacimiento" placeholder="Fecha de Nacimiento">
  </div>
  <div class="form-group">
    <input class="form-control" type="number" name="telefono" placeholder="Telefono">
  </div>
  <p>Selecciona tus sedes de preferencia:</p>
  <div class="form-group form-check">
    <% sedes.forEach( sede => {%>
    <input type="checkbox" name="sedePreferencia" value="<%= sede._id %>">
    <label for="sedePreferencia"><%= sede.nombre %></label>
    <% }) %>
  </div>
    <button class="btn btn-primary">Sign Up</button>	
</form>

<% include ../partials/footer %>

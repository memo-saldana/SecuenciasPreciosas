
<% include ../partials/header %>

<h1>Registra un grupo nuevo!</h1>
<form action="/instituciones/<%= instId%>/sedes/<%= sede._id%>/grupos" method="POST">
  <div class="form-group">
    <input placeholder="SalÃ³n" name="salon" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label for="instructora">Instructora</label>
    <select placeholder="Instructora" name="instructora" class="custom-select my-1 mr-sm-2" id="instructora">
      <% instructoras.forEach(instructora => { %>
        <option value="<%= instructora._id %>"><%= instructora.nombre %></option>
      <% }); %>
    </select>
  </div>
  <div class="form-group">
    <label for="curso">Curso</label>
    <select placeholder="Curso" name="curso" class="custom-select my-1 mr-sm-2" id="curso">
      <% cursos.forEach(curso => { %>
        <option value="<%= curso._id %>"><%= curso.nombre %></option>
      <% }); %>
    </select>
  </div>
  <button class="btn btn-primary">Registrar grupo</button>
</form>


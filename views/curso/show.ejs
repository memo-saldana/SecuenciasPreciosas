<% include ../partials/header %>

<h1>Bienvenida al curso <%= grupo.curso.nombre %>!</h1>
<p><strong>Fecha de inicio:</strong> <%= grupo.curso.fechaInicio %></p>
<p><strong>Fecha de fin:</strong> <%= grupo.curso.fechaFin %></p>
<p><strong>Instructora:</strong> <%= grupo.instructora.nombre %></p>
<h2>Avisos:</h2>
<div class="container">
<% grupo.avisos.forEach( (aviso, i)=>{%>
  <h3>Aviso <%= i+1 %></h3>
  <h4><%= aviso.fecha %></h4>
  <p><%=aviso.texto%></p>
<% })%>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>

<h1>Crea un curso nuevo</h1>

<form action="/cursos" method="POST">
  <div class="form-group">
    <input placeholder="Nombre" name="nombre" type="text" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="Fecha de inicio" name="fechaInicio" type="date" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="Fecha de fin" name="fechaFin" type="date" class="form-control">
  </div>

  <button class="btn btn-primary">Crear curso</button>
</form>

